{
  "author": "Insuline.ru <insuline.ru@gmail.com>",
  "bin": {
    "ai-commit": "./index.js"
  },
  "bugs": {
    "url": "https://github.com/insulineru/ai-commit/issues"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "gpt-3-encoder": "^1.1.4",
    "inquirer": "^12.9.4",
    "semver": "^7.7.2",
    "undici": "^7.15.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/jest": "^30.0.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-environment-node": "^30.1.2",
    "jest-esm-transformer": "^1.0.0",
    "lint-staged": "^16.1.6",
    "pre-commit": "^1.2.2",
    "standard": "^17.1.2",
    "typedoc": "^0.28.12",
    "typedoc-plugin-markdown": "^4.8.1"
  },
  "description": "âœ¨ Make Github commits easier with ChatGPT, Gitmoji and Conventional Commits ðŸš€",
  "homepage": "https://github.com/insulineru/ai-commit#readme",
  "keywords": [
    "ai",
    "chatgpt",
    "commit",
    "gitmoji",
    "conventional",
    "commits"
  ],
  "license": "MIT",
  "main": "main.js",
  "name": "ai-commit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/insulineru/ai-commit.git"
  },
  "scripts": {
    "check": "npx -y standard . --fix && git add -A . && ./index.js",
    "check:all": "npx -y standard . --fix && git add -A . && ./index.js --all",
    "check:release": "npx -y standard . --fix && git add . && ./index.js --force && (git gfi || true) && ./index.js -r",
    "publish:major": "npm version major && npm publish --access public",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --coverage --watchAll=false",
    "lint": "npx -y standard . --fix",
    "lint:check": "npx -y standard .",
    "update": "npx -yes -p npm-check-updates ncu -u",
    "docs": "typedoc src --out docs --name ai-commit --readme README.md --plugin typedoc-plugin-markdown",
    "precommit": "lint-staged",
    "prepare": "husky"
  },
  "type": "module",
  "version": "2.1.1"
}
